{
  "name": "server",
  "author": "Francois Wouts <f@zenc.io>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node build/server.js",
    "integration-test-server": "yarn build && node build/testing/integration/server.js",
    "build": "tsc && copyfiles -u 1 src/**/*.pug build/",
    "lint": "tslint --project tsconfig.json --fix",
    "test": "SENDGRID_API_KEY=TEST jest --runInBand",
    "precommit": "lint-staged && concurrently \"yarn build\" \"yarn test\""
  },
  "_moduleAliases": {
    "@": "build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/src/.*\\.(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "concurrently": "^3.5.1",
    "copyfiles": "^2.0.0",
    "express": "^4.16.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.2",
    "module-alias": "^2.0.6",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.2.1",
    "@types/body-parser": "^1.16.8",
    "@types/cors": "^2.8.3",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/pug": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "email-validator": "^1.1.1",
    "moment": "^2.22.0",
    "owasp-password-strength-test": "^1.3.0",
    "pg": "^7.4.1",
    "pug": "^2.0.3",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.1.20",
    "uuid": "^3.2.1"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  }
}

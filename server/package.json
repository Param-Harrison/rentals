{
  "name": "server",
  "author": "Francois Wouts <f@zenc.io>",
  "private": true,
  "scripts": {
    "start": "yarn build && node build/server.js",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json --fix",
    "test": "jest",
    "precommit": "yarn build && lint-staged && yarn test"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/src/.*\\.(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "express": "^4.16.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.2",
    "module-alias": "^2.0.6",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/uuid": "^3.4.3",
    "body-parser": "^1.18.2",
    "jsonwebtoken": "^8.2.0",
    "owasp-password-strength-test": "^1.3.0",
    "pg": "^7.4.1",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.0-alpha.42",
    "uuid": "^3.2.1"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  }
}
